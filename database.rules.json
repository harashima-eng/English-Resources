{
  "rules": {
    "exams": {
      "$examId": {
        ".read": true,
        ".write": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'",
        "connectedStudents": {
          "$pushId": {
            ".write": "newData.val() === true || newData.val() === null"
          }
        }
      }
    },
    "answers": {
      "$examId": {
        ".read": true,
        ".write": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'"
      }
    },
    "responses": {
      "$examId": {
        ".read": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'",
        ".write": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'",
        "$questionKey": {
          "$deviceId": {
            ".write": "newData.hasChildren(['answer', 'timestamp']) && newData.child('answer').isString() && newData.child('answer').val().length < 20",
            ".validate": "newData.hasChildren(['answer', 'timestamp']) && !newData.hasChild('extra')"
          }
        }
      }
    },
    "leaderboard": {
      "$examId": {
        ".read": true,
        ".write": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'",
        "$deviceId": {
          ".write": "newData.hasChildren(['name', 'score', 'timestamp'])",
          ".validate": "newData.child('name').isString() && newData.child('name').val().length > 0 && newData.child('name').val().length <= 12 && newData.child('score').isNumber()"
        }
      }
    },
    "errors": {
      ".read": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'",
      "$errorId": {
        ".write": true,
        ".validate": "newData.hasChildren(['msg', 'ts']) && newData.child('msg').isString() && newData.child('msg').val().length < 500"
      }
    },
    "bug-reports": {
      ".read": "auth != null && auth.token.email === 'harashima@komagome.ed.jp'",
      "$reportId": {
        ".write": true,
        ".validate": "newData.hasChildren(['type', 'ts', 'deviceId']) && newData.child('type').isString() && newData.child('type').val().length < 50"
      }
    }
  }
}
